@model EditUserVM
<!-- Begin Main Content Area -->
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Edit Account Page</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home</a>
                            </li>
                            <li>Edit Account</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row justify-content-center">

                <div class="alert alert-danger" asp-validation-summary="ModelOnly">

                </div>
                <div class="col-lg-6 pt-5 pt-lg-0">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Register</h4>
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <label>First Name</label>
                                    <input asp-for="FirstName" placeholder="First Name" /><br />
                                    <span class="text-danger" asp-validation-for="FirstName"></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label>Last Name</label>
                                    <input asp-for="LastName" placeholder="Last Name" /><br />
                                    <span class="text-danger" asp-validation-for="LastName"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>Email Address*</label>
                                    <input asp-for="Email" placeholder="Email Address" readonly /><br />
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>Username*</label>
                                    <input asp-for="Username" placeholder="Username" /><br />
                                    <span class="text-danger" asp-validation-for="Username"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>Current Password</label>
                                    <input asp-for="CurrentPassword" placeholder="CurrentPassword" /><br />
                                    <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>New Password</label>
                                    <input asp-for="Password" placeholder="Password" /><br />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>Confirm Password</label>
                                    <input asp-for="ConfirmPassword" placeholder="Confirm Password" /><br />
                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Edit account
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
@section Scripts{
    <script>

        $("#more").click(function (e) {
            e.preventDefault();
            $("#panel").slideToggle();
        });
    </script>
}
<!-- Main Content Area End Here -->
